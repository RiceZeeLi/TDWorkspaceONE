:
[ -z "$2" ] && exit

list=`cat $2`

XFS=$IFS
IFS=","
parameters=`echo "$list" | while read v s
do
	echo JHFS+
	echo \"$v\" | tr ' ' '_'
	echo $s
done`
IFS=$XFS

x=`echo "$list" | wc -l`
echo diskutil partitionDisk $1 $x $parameters

XFS=$IFS
IFS=","
echo "$list" | nl -s, -v 2 -ba -n ln -w 1 | while read n v s
do
	l=`echo $v | tr ' ' '_'`
	echo touch \"/Volumes/$l/.metadata_never_index\"
done
IFS=$XFS
